<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/genre_width"
    android:layout_height="@dimen/genre_geight"
    android:id="@+id/grid_item_layout"
    android:gravity="center"
    android:translationZ="3dp"
    android:clipToPadding="false"
    android:background="@drawable/selector_grid_category"
    android:focusable="true"
    android:clickable="true"
    android:layout_gravity="center"
    tools:targetApi="lollipop">
        <androidtv.livetv.stb.ui.custom_views.CustomTextView
            android:id="@+id/grid_cat_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:padding="5dp"
            android:textStyle="bold"
            card_view:fontAssetName="@string/font_helvetica_regular"
            android:text="Enterainment"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>
