<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_txt_img_hor"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:listSelector="@drawable/main_dvr_list_selector"
    android:focusable="true"
    android:focusedByDefault="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ico_alarm_play"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-14dp"
            android:layout_marginRight="-14dp"
            android:layout_toLeftOf="@+id/on_air_text"
            android:layout_toStartOf="@+id/on_air_text"
            android:adjustViewBounds="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/red_circle"
            android:visibility="visible" />
        <TextView
            android:layout_marginLeft="-20dp"
            android:id="@+id/on_air_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:text="ON AIR"
            android:textSize="20sp"
            android:textColor="@color/selector_epg_prgm_name"
            android:layout_marginStart="-20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
        <TextView
            android:id="@+id/txt_prgm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="sadasdasadsaddfs"
            android:textColor="#ddefde"
            android:textSize="20sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_prgm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/ico_alarm_play"
            android:layout_toRightOf="@+id/txt_prgm_time"
            android:maxLines="1"
            android:text="sadasdasadsaddfs"
            android:textColor="@color/selector_epg_prgm_name"
            android:textSize="20sp"
            android:layout_toStartOf="@+id/ico_alarm_play"
            android:layout_toEndOf="@+id/txt_prgm_time" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"/>


</LinearLayout>