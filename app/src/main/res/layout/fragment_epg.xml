<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#40000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:gravity="bottom"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="800dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#70000000"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/channel_list"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:overScrollMode="always"
                android:background="@color/transp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="40dp">
                    <TextView
                        android:id="@+id/txt_channel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/txt_empty"
                        android:textColor="#fff"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/txt_on_air"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#d01e1e"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="ON AIR"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_empty"
                            android:textColor="#fff"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_empty"
                            android:textColor="@color/date_defocused"
                            android:textSize="25sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_on_air_prgm_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_empty"
                            android:textColor="@color/date_defocused"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/txt_on_air_prgm_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_empty"
                            android:textColor="#fff"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>

                <FrameLayout
                    android:id="@+id/container_epg_dvr"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/layout_date_epg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <GridView
                            android:id="@+id/gv_date"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:listSelector="@drawable/main_channel_list_selector"
                            android:nextFocusUp="@id/channel_list"
                            android:drawSelectorOnTop="true"
                            android:numColumns="1"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"

                            android:background="@color/view"/>

                        <GridView
                            android:id="@+id/gv_prgms"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="16"
                            android:listSelector="@drawable/main_dvr_list_selector"
                            android:nextFocusLeft="@id/gv_date"
                            android:nextFocusUp="@id/channel_list"
                            android:drawSelectorOnTop="true"
                            android:numColumns="1"/>
                    </LinearLayout>
                </FrameLayout>




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
