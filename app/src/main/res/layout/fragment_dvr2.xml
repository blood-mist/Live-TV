<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#40000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="800dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#70000000"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/channel_list"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:overScrollMode="always"
                android:focusable="true"
                android:background="@color/transp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/img_dvr_channel_onAir"
                        android:layout_width="@dimen/epg_channel_on_air_width"
                        android:layout_height="@dimen/epg_channel_on_air_height"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/margin_medium"
                        android:gravity="center"
                        />
                    <androidtv.livetv.stb.ui.custom_views.CustomTextView
                        android:id="@+id/txt_on_air"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#d01e1e"
                        app:fontAssetName="@string/font_helvetica_regular"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="ON AIR"
                        android:textColor="#fff"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_high"
                        android:orientation="vertical">

                        <androidtv.livetv.stb.ui.custom_views.CustomTextView
                            android:id="@+id/txt_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:fontAssetName="@string/font_helvetica_regular"
                            android:text="@string/txt_empty"
                            android:textColor="#fff"
                            style="@style/Base.TextAppearance.AppCompat.Medium"/>

                        <androidtv.livetv.stb.ui.custom_views.CustomTextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:fontAssetName="@string/font_helvetica_regular"
                            android:text="@string/txt_empty"
                            android:textColor="@color/date_defocused"
                            style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:padding="@dimen/margin_small"
                        android:orientation="vertical">

                        <androidtv.livetv.stb.ui.custom_views.CustomTextView
                            android:id="@+id/txt_on_air_prgm_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_empty"
                            app:fontAssetName="@string/font_helvetica_regular"
                            android:textColor="@color/date_defocused"
                            style="@style/Base.TextAppearance.AppCompat.Medium"/>

                        <androidtv.livetv.stb.ui.custom_views.CustomTextView
                            android:id="@+id/txt_on_air_prgm_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/txt_empty"
                            app:fontAssetName="@string/font_helvetica_regular"
                            android:textColor="#fff"
                            android:layout_marginTop="@dimen/margin_small"
                            style="@style/Base.TextAppearance.AppCompat.Medium"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>

                <FrameLayout
                    android:id="@+id/container_epg_dvr"
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/layout_date_epg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/gv_date"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.5"
                            android:nextFocusUp="@id/channel_list"
                            android:focusable="true"
                            android:background="@color/transp"
                            android:focusableInTouchMode="true"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"

                            android:background="@color/view"/>
                         <RelativeLayout
                             android:layout_width="0dp"
                             android:layout_weight="16"
                             android:layout_height="match_parent">
                             <android.support.v7.widget.RecyclerView
                                 android:id="@+id/gv_prgms"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"

                                 android:listSelector="@drawable/main_dvr_list_selector"
                                 android:nextFocusLeft="@id/gv_date"
                                 android:nextFocusUp="@id/channel_list"
                                 android:drawSelectorOnTop="true"
                                 />
                             <androidtv.livetv.stb.ui.custom_views.CustomTextView
                                 android:id="@+id/noepg"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:gravity="center"
                                 android:textColor="@color/color_white"
                                 style="@style/Base.TextAppearance.AppCompat.Large"
                                 app:fontAssetName="@string/font_exo_semi_bold"
                                 android:text="Dvr Loading..."/>
                         </RelativeLayout>

                    </LinearLayout>
                </FrameLayout>




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
