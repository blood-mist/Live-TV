<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:focusable="false"
            android:thumb="@drawable/dialog_heading"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <LinearLayout
                android:id="@+id/initials"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dip">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dip"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_prev"
                        android:layout_width="@dimen/media_controller_size"
                        android:layout_height="@dimen/media_controller_size"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/selector_media_controller_previous">

                    </Button>

                    <Button
                        android:id="@+id/btn_rewind"
                        android:layout_width="@dimen/media_controller_size"
                        android:layout_height="@dimen/media_controller_size"
                        android:layout_margin="20dp"
                        android:background="@drawable/selector_media_controller_rewind">

                    </Button>

                    <Button
                        android:id="@+id/btn_pause"
                        android:layout_width="@dimen/media_controller_size"
                        android:layout_height="@dimen/media_controller_size"
                        android:layout_margin="20dp"
                        android:background="@drawable/selector_media_controller_pause">

                    </Button>

                    <Button
                        android:id="@+id/btn_fwd"
                        android:layout_width="@dimen/media_controller_size"
                        android:layout_height="@dimen/media_controller_size"
                        android:layout_margin="20dp"
                        android:background="@drawable/selector_media_controller_fwd">

                    </Button>

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="@dimen/media_controller_size"
                        android:layout_height="@dimen/media_controller_size"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:background="@drawable/selector_media_controller_next">

                    </Button>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_time_current"
                        android:text="Medium"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/dvr_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_time_end"
                        android:text="Medium"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"

        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/btn_info"
                android:layout_width="@dimen/media_controller_size"
                android:layout_height="@dimen/media_controller_size"
                android:layout_margin="20dp"
                android:background="@drawable/selector_media_controller_info" />
            <Button
                android:id="@+id/btn_menu"
                android:layout_width="@dimen/media_controller_size"
                android:layout_height="@dimen/media_controller_size"
                android:layout_margin="20dp"
                android:background="@drawable/selector_media_controller_menu" />



        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/video_logo"
        android:layout_alignParentRight="true"
        android:layout_above="@id/layout_main_container"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <androidtv.livetv.stb.ui.custom_views.CustomTextView
        android:id="@+id/programName"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:padding="10dp"
        android:visibility="invisible"
        android:gravity="center"
        android:background="#55000000"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/layout_main_container"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp" />


</RelativeLayout>
